<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="jp.arise.sij.dao.SIJGM002Dao">
    <select id="getSyainId" resultType="String">
        SELECT max(syain_id)
        FROM seq
    </select>
    <select id="getGenbaId" resultType="String">
        SELECT max(genba_id)
        FROM seq
    </select>
     <insert id="insert" parameterType="jp.arise.sij.dto.SIJGM002Dto">
        INSERT INTO syain_dt(syain_id,genba_id,syain_na,yakusyoku_cd,phase_cd,moyori_eki_1,moyori_eki_2,moyori_eki_3,syozoku_team,birth_dt,tanka_vl,zensyoku_na,syain_address,syussin_na,yuko_fg,sakujo_fg,insert_user,insert_ts)
	    VALUES(#{syainId}, #{genbaId}, #{name}, #{position}, #{phase},#{moyoriStation1}, #{moyoriStation2}, #{moyoriStation3}, #{teamName}, #{seinengappi}, #{tanka}, #{previous}, #{address}, #{birthPlace},1,0,'test','20180101')
    </insert>
     <delete id="delete" parameterType="jp.arise.sij.dto.SIJGM002Dto">
        DELETE FROM syain_dt
	 	WHERE  syain_id = #{syainId}
	 </delete>
     <update id="update" parameterType="jp.arise.sij.dto.SIJGM002Dto">
        UPDATE syain_dt
        SET	syain_na = #{name},
        		yakusyoku_cd = #{position},
        		phase_cd = #{phase},
        		moyori_eki_1 = #{moyoriStation1},
        		moyori_eki_2 = #{moyoriStation2},
        		moyori_eki_3 = #{moyoriStation3},
        		syozoku_team = #{teamName},
        		birth_dt = #{seinengappi},
        		tanka_vl = #{tanka},
        		zensyoku_na = #{previous},
        		syain_address = #{address},
        		syussin_na = #{birthPlace}
	 	WHERE  syain_id = #{syainId}
	 </update>

</mapper>